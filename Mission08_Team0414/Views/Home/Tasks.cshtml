@{
}

@model Task

<h2>Task</h2>

<form method="post">
    <input asp-for="TaskId" type="hidden">

    <label asp-for="TaskName">Task:</label>
    <input asp-for="TaskName" required>
    <br><br>

    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" type="date">
    <br><br>

    <label asp-for="Quadrant">Quadrant:</label>
    <input asp-for="Quadrant" type="number" min="1" max="4" required>
    <br><br>

    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId" required>
        <option value="" disabled selected>Select Option</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId>">@c.CategoryName</option>
        }
    </select>
    <br><br>

    <label asp-for="IsCompleted">Completed:</label>
    <select>
        <option value="" disabled selected>Select Option</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br><br>

    <button type="button">Submit</button>

    <div asp-validation-summary="All"></div>

</form>




